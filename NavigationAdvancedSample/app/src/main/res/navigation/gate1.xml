<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gate1"
    app:startDestination="@id/gateFragment1">

    <fragment
        android:id="@+id/gateFragment1"
        android:name="com.example.android.navigationadvancedsample.scren1.GateFragment1"
        android:label="fragment_gate1"
        tools:layout="@layout/fragment_gate1" >
        <argument
            android:name="gate1Param"
            app:argType="string"
            android:defaultValue="Default Gate" />
        <argument
            android:name="instance"
            app:argType="integer"
            android:defaultValue="1" />
        <action
            android:id="@+id/action_gateFragment1_to_secondBottomNavigationActivity"
            app:destination="@id/secondBottomNavigationActivity"
            app:launchSingleTop="false"
            app:popUpTo="@id/gateFragment1"
            app:popUpToInclusive="false" />
    </fragment>
    <activity
        android:id="@+id/secondBottomNavigationActivity"
        android:name="com.example.android.navigationadvancedsample.SecondBottomNavigationActivity"
        android:label="SecondBottomNavigationActivity" />
</navigation>