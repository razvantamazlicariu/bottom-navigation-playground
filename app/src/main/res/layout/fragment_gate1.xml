<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scren1.GateFragment1"
    android:background="@android:drawable/ic_input_add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_instance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="vm"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_instance"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parameter list"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/tv_params_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gate 1"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text"
            android:layout_margin="20dp"
            android:text="Enter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_enter"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_decrease"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="-"/>
            <Button
                android:id="@+id/btn_increase"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="+"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>